  "item": [
    {
      "name": "Estimate Fare",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "http://localhost:8082/pricing/estimate",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "8082",
          "path": [
            "pricing",
            "estimate"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\"pickupLat\": 16.06, \"pickupLng\": 108.21, \"dropoffLat\": 16.05, \"dropoffLng\": 108.23, \"timeOfDay\": \"PEAK\"}"
        }
      }
    },
    {
      "name": "Create Trip",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "X-User-Id",
            "value": "101"
          }
        ],
        "url": {
          "raw": "http://localhost:8082/trips",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "8082",
          "path": [
            "trips"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\"pickupLat\": 16.06, \"pickupLng\": 108.21, \"dropoffLat\": 16.05, \"dropoffLng\": 108.23}"
        }
      }
    },
    {
      "name": "Get Trip",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://localhost:8082/trips/{{tripId}}",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "8082",
          "path": [
            "trips",
            "{{tripId}}"
          ]
        }
      }
    },
    {
      "name": "Cancel Trip",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "X-User-Id",
            "value": "101"
          }
        ],
        "url": {
          "raw": "http://localhost:8082/trips/{{tripId}}/cancel",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "8082",
          "path": [
            "trips",
            "{{tripId}}",
            "cancel"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\"reason\": \"CHANGE_OF_PLAN\"}"
        }
      }
    },
    {
